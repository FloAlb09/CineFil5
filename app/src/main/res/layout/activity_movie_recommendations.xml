<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieRecommendationsActivity"
    style="@style/BackgroundStyle">

    <include layout="@layout/toolbar_main"/>

    <LinearLayout
        android:id="@+id/movie_recommendations_layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/page_title"
            style="@style/SubtitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin_end_hint"
            android:text="@string/recommendation_page_title" />

        <TextView
            android:id="@+id/movie_title_recommendations_text_view"
            android:layout_width="wrap_content"
            style="@style/SubtitleTextStyle"
            android:layout_height="wrap_content"
            tools:text="@string/movie_title"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_recommendations_layout_title">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/movie_recommendations_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        tools:itemCount="5"
        tools:listitem="@layout/item_movie" />
    </ScrollView>

    <include layout="@layout/navigation_bar_main"/>

</androidx.constraintlayout.widget.ConstraintLayout>